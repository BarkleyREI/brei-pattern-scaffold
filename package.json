{
	"name": "brei-pattern-scaffold",
	"version": "0.1.7",
	"description": "Pattern library client project by BarkleyREI",
	"author": {
		"name": "BarkleyREI"
	},
	"license": "ISC",
	"browserslist": [
		"> 5% in US",
		"last 2 versions",
		"Firefox ESR",
		"iOS >= 12"
	],
	"eslintConfig": {
		"root": true
	},
	"dependencies": {
		"foundation-sites": "~6.6.3",
		"jquery": "~3.5.0",
		"modernizr": "~3.11.0",
		"what-input": "~5.2.7"
	},
	"devDependencies": {
		"@babel/core": "~7.16.7",
		"@babel/preset-env": "~7.16.8",
		"@frctl/fractal": "~1.5.11",
		"autoprefixer": "~9.8.8",
		"babel-loader": "~8.2.3",
		"brei-util": "^1.0.9",
		"copy": "~0.3.2",
		"cssnano": "~5.0.15",
		"customizr": "~2.0.3",
		"del": "~6.0.0",
		"eslint": "~8.6.0",
		"eslint-loader": "~4.0.2",
		"expand-files": "~0.8.4",
		"fs": "0.0.1-security",
		"full-icu": "~1.4.0",
		"handlebars-helpers": "~0.10.0",
		"imagemin-cli": "~7.0.0",
		"imagemin-giflossy": "~5.1.10",
		"imagemin-gifsicle": "~7.0.0",
		"imagemin-jpegtran": "~7.0.0",
		"imagemin-mozjpeg": "~10.0.0",
		"imagemin-optipng": "~8.0.0",
		"imagemin-pngquant": "~9.0.2",
		"imagemin-svgo": "~10.0.1",
		"imagemin-webp": "~7.0.0",
		"mkdirp": "~1.0.4",
		"mocha": "~9.1.3",
		"node-sass": "~7.0.1",
		"postcss": "~8.4.5",
		"postcss-cli": "~9.1.0",
		"postcss-loader": "~6.2.1",
		"postcss-pxtorem": "~6.0.0",
		"postcss-sass": "~0.5.0",
		"postcss-scss": "~4.0.3",
		"postcss-sorting": "~7.0.1",
		"rei-cursion": "~1.0.0",
		"sass-loader": "~12.4.0",
		"shelljs": "~0.8.5",
		"stylelint": "~14.2.0",
		"stylelint-scss": "~4.1.0",
		"stylelint-selector-bem-pattern": "~2.1.1",
		"uglifyjs-webpack-plugin": "~2.2.0",
		"webpack": "~5.66.0",
		"webpack-cli": "~4.9.1"
	},
	"scripts": {
		"build": "npm run check && npm run clean:dist && npm run scaffold && npm run build:css && npm run build:js && fractal build",
		"build:css": "npm run sass:build && npm run postcss:preprocess && npm run postcss:postprocess",
		"build:img": "node lib/imagemin.js",
		"build:js": "npx webpack --config ./_config/webpack.config.js --mode=production",
		"check": "eslint --ignore-path _config/.eslintignore -c _config/.eslintrc.json assets/ejs && npm run sass:lint",
		"clean:dist": "node lib/del.js --dist",
		"init": "npm run build:img && npm run modernizr && npm run sass:index",
		"modernizr": "customizr -c ./_config/modernizr-config.json",
		"postcss:fixsass": "postcss --config _config/ -r assets/scss/**/*.scss --env=scss",
		"postcss:postprocess": "postcss --config _config/ -r public/css/main.css --env=csspost",
		"postcss:preprocess": "postcss --config _config/ -r public/css/main.css --env=csspre",
		"preprocess": "npm run preprocess:css && npm run preprocess:js && npm run modernizr",
		"preprocess:css": "npm run sass:index && npm run sass:build && npm run postcss:preprocess",
		"preprocess:css:server": "npm run sass:build && npm run postcss:preprocess",
		"preprocess:js": "npx webpack --config ./_config/webpack.config.js",
		"preprocess:server": "npm run preprocess:css:server && npm run preprocess:js && npm run modernizr",
		"sass:build": "npm rebuild node-sass && node lib/nodesass.js",
		"sass:index": "node lib/updateScss.js",
		"sass:lint": "npm run postcss:fixsass && stylelint \"assets/scss/**/*.scss\" --fix --cache --cache-location \"./.stylelintcache/\" --config \"./_config/.stylelintrc.json\" --ignore-path \"./_config/.stylelintignore\"",
		"scaffold": "npm run build:img && npm run preprocess",
		"start": "npm run scaffold && fractal start",
		"test": "mocha"
	}
}
